<Window x:Class="busstops.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:busstops"
        mc:Ignorable="d"
        Title="Window2" Height="174" Width="205.5">
    <Grid>
        <Label Content="Водитель" Margin="10,0" VerticalAlignment="Top" Height="22" HorizontalAlignment="Center"/>
        <TextBox Name="Name" HorizontalAlignment="Left" Height="20" Margin="0,20,0 ,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Номер" Margin="0,40,0,0" VerticalAlignment="Top" Height="22" HorizontalAlignment="Center"/>
        <TextBox Name="Number" HorizontalAlignment="Left" Height="20" Margin="0,60,0 ,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <WrapPanel HorizontalAlignment="Center" Margin="12,90,10,0" Width="176" RenderTransformOrigin="0.557,0.481">
            <Button IsCancel="True" MinWidth="60" Content="Отмена" Width="100"/>
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="5,0,0,0" Content="OK" Width="71"/>
        </WrapPanel>
    </Grid>
</Window>
